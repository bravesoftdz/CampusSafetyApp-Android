<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0065BD">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_studentlocation_firstname"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_studentlocation_lastname"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_studentlocation_phone_number"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="8dp"
            android:layout_marginTop="4dp"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spin_studentlocation_service"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="Service"
            android:padding="8dp"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_studentlocation_license"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="License"
            android:padding="8dp"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_studentlocation_vehicle_year"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="Vehicle Year"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_studentlocation_vehicle_make"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:hint="Vehicle Make"
            android:padding="8dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btn_studentlocation_submit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/et_anonymoustips_message"
            android:layout_alignEnd="@+id/et_anonymoustips_message"
            android:background="#A8E36D"
            android:layout_marginTop="4dp"/>
    </LinearLayout>


</ScrollView>